            }
             payload["items"] = [];
            for(let data of cart.items){
                payload["items"].push({
                    "item":data.item,
                    "quantity":data.quantity
                })
            }
            $.ajax({
                type: "POST",
                url: "/create-order",
                data: payload,
                success: function (response) {
